<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <form action="/insertData" method="post">
        <table border = "" align="center">
            <caption>
                <h2>
                    Add User Data
                </h2>
            </caption>
            <tr>
                <td>
                    User Name
                </td>
                <td>
                    <input type="text" name="username" id="">
                </td>
            </tr>
            <tr>
                <td>
                    Email
                </td>
                <td>
                    <input type="text" name="email" id="">
                </td>
            </tr>
            <tr>
                <td>
                    Password
                </td>
                <td>
                    <input type="password" name="password" id="">
                </td>
            </tr>
            <tr>
                <td>
                    Phone Number
                </td>
                <td>
                    <input type="number" name="phone" id="">
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Add Data">
                </td>
            </tr>
        </table>
    </form>

    <table border="" align="center">
        <caption>
            <h2>
                User Data
            </h2>
        </caption>
            <tr>
                <td>
                    User Name
                </td>
                <td>
                    Email Address
                </td>
                <td>
                    Password
                </td>
                <td>
                    Phone Number
                </td>
            </tr>
            <% data.map((val,idx) => { %>
                <tr>
                    <td><%= val.username %></td>
                    <td><%= val.email %></td>
                    <td><%= val.password %></td>
                    <td><%= val.phone %></td>
                </tr>
            <% }) %>
    </table>
</body>
</html>